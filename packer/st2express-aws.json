{
  "variables": {
    "environment": "current_working_directory",
    "role": "st2express",
    "region": "us-east-1",
    "ami": "ami-d05e75b8"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "source_ami": "{{user `ami`}}",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "st2express {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'ubuntu'|sudo -S sh '{{.Path}}'",
      "environment_vars": [
        "environment={{user `environment`}}",
        "FACTER_role={{user `role`}}",
        "FACTER_datacenter={{user `region`}}"
      ],
      "scripts": [
        "script/ec2.sh",
        "script/ubuntu/base.sh",
        "script/bootstrap-puppet.sh",
        "script/puppet-st2express.sh",
        "script/ubuntu/cleanup.sh",
        "script/zerodisk.sh"
      ]
    }
  ]
}
