#!/usr/bin/env bash

add-prefix-do-each() {
    local _args_array=($@)
    local _arg_len=${#_args_array[@]}
    local _prefix="${1:?}"
    local _array="${@:2:$_args_len}"
    local _blob=

    for element in $_array; do
        _blob="${blob} ${_prefix} ${element}"
    done

    echo $_blob
}

to-lowercase() {
    while read word; do
        case "$word" in
            [A-Z])
                n=$(printf "%d" "'$1")
                n=$((n+32))
                printf \\$(printf "%o" $n)
        esac
    done
}
